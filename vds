  <script>
    const x = document.getElementById('notification'),
          y = document.getElementById('notification-text'),
          z = document.getElementById('hamburger'),
          w = document.getElementById('nav-menu'),
          v = document.getElementById('overlay'),
          u = document.getElementById('close-btn'),
          t = document.getElementById('header-logo'),
          dropdownToggle = document.querySelector('.dropdown-toggle'),
          dropdownContainer = document.querySelector('.dropdown-container'),
          intelTable = document.getElementById('intel-table'),
          ryzenTable = document.getElementById('ryzen-table'),
          processorLabel = document.getElementById('processor-label'),
          intelBtn = document.querySelector('.toggle-btns button:nth-child(1)'),
          ryzenBtn = document.querySelector('.toggle-btns button:nth-child(2)');

    // Simüle edilmiş oturum durumu (gerçek uygulamada backend'den gelir)
    let isLoggedIn = false; // Varsayılan olarak giriş yapılmamış kabul ediyoruz

    function s(a) {
      y.textContent = a;
      x.classList.add('show');
      setTimeout(() => x.classList.remove('show'), 5000);
    }
    function r(b) {
      console.log("Notification would be sent to Discord: ", b);
    }
    function a(c) {
      const d = `User Action: ${c}`;
      s(d);
      r(d);
    }
    function h() {
      s("Çıkış yaptınız!");
      isLoggedIn = false; // Çıkış yapıldığında oturumu kapat
      setTimeout(() => window.location.href = '/auth', 1000);
    }
    function o() {
      const n = z.classList.toggle('active');
      w.classList.toggle('active');
      v.classList.toggle('active');
      u.classList.toggle('active');
    }
    function toggleDropdown(e) {
      e.preventDefault();
      dropdownContainer.classList.toggle('active');
    }
    function showIntel() {
      intelTable.classList.add('active');
      ryzenTable.classList.remove('active');
      processorLabel.textContent = 'Intel';
      intelBtn.classList.add('active');
      ryzenBtn.classList.remove('active');
    }
    function showRyzen() {
      ryzenTable.classList.add('active');
      intelTable.classList.remove('active');
      processorLabel.textContent = 'Ryzen';
      ryzenBtn.classList.add('active');
      intelBtn.classList.remove('active');
    }
    function handlePurchase(packageName, price) {
      if (!isLoggedIn) {
        s("Satın almak için lütfen giriş yapın!");
        setTimeout(() => window.location.href = '/auth', 1000);
      } else {
        s(`${packageName} - ${price} satın alma işlemi başlatılıyor...`);
        // Burada gerçek bir satın alma işlemi için yönlendirme veya başka bir işlem yapılabilir
        console.log(`Satın alma: ${packageName} - ${price}`);
      }
    }

    z.addEventListener('click', o);
    u.addEventListener('click', o);
    v.addEventListener('click', o);
    t.addEventListener('click', () => t.classList.add('spin'));
    dropdownToggle.addEventListener('click', toggleDropdown);
    showIntel(); // Varsayılan olarak Intel tablosunu göster

    // Test amaçlı oturum açma/kapama simülasyonu (gerçek uygulamada backend ile yapılır)
    // Örneğin, giriş yapmış gibi test etmek için aşağıdaki satırı uncomment edebilirsiniz:
    // isLoggedIn = true;
  </script>
</body>
</html>
