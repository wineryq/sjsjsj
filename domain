  <script>
    const x = document.getElementById('notification'),
          y = document.getElementById('notification-text'),
          z = document.getElementById('hamburger'),
          w = document.getElementById('nav-menu'),
          v = document.getElementById('overlay'),
          u = document.getElementById('close-btn'),
          t = document.getElementById('header-logo'),
          dropdownToggle = document.querySelector('.dropdown-toggle'),
          dropdownContainer = document.querySelector('.dropdown-container'),
          domainSearch = document.getElementById('domain-search'),
          resultSection = document.getElementById('result-section'),
          resultsContainer = document.getElementById('results-container');

    const domainPrices = {
      '.com': 200,
      '.com.tr': 150,
      '.net': 250,
      '.tr': 200,
      '.xyz': 130,
      '.org': 375,
      '.info': 250,
      '.in': 600
    };

    function s(a) {
      y.textContent = a;
      x.classList.add('show');
      setTimeout(() => x.classList.remove('show'), 5000);
    }
    function r(b) {
      console.log("Notification would be sent to Discord: ", b);
    }
    function a(c) {
      const d = `User Action: ${c}`;
      s(d);
      r(d);
    }
    function h() {
      s("Çıkış yaptınız!");
      setTimeout(() => window.location.href = '/auth', 1000);
    }
    function o() {
      const n = z.classList.toggle('active');
      w.classList.toggle('active');
      v.classList.toggle('active');
      u.classList.toggle('active');
    }
    function toggleDropdown(e) {
      e.preventDefault();
      dropdownContainer.classList.toggle('active');
    }
    function createResultCard(domain, price, isMostSeller = false) {
      const card = document.createElement('div');
      card.className = 'result-card';
      if (isMostSeller) {
        card.classList.add('most-seller');
      }
      
      card.innerHTML = `
        <h3>${domain}</h3>
        <p>${price} TL</p>
        ${isMostSeller ? '<span class="most-seller-tag">En Çok Satan</span>' : ''}
        <button class="purchase-btn" onclick="goToPayment('${domain}', ${price})">Satın Al</button>
      `;
      
      return card;
    }
    function goToPayment(domain, price) {
      const paymentUrl = `/auth`;
      s(`${domain} için ödeme sayfasına yönlendiriliyorsunuz...`);
      setTimeout(() => {
        window.location.href = paymentUrl;
      }, 1000);
    }
    function searchDomain() {
      const searchValue = domainSearch.value.toLowerCase().trim();
      if (!searchValue) {
        s("Lütfen bir domain girin!");
        return;
      }

      resultsContainer.innerHTML = '';
      resultSection.classList.add('active');

      const baseDomain = searchValue.includes('.') 
        ? searchValue.split('.')[0] 
        : searchValue;

      Object.entries(domainPrices).forEach(([ext, price], index) => {
        const fullDomain = `${baseDomain}${ext}`;
        const isMostSeller = ext === '.com';
        
        const card = createResultCard(fullDomain, price, isMostSeller);
        card.querySelector('p').style.display = 'none';
        const loading = document.createElement('p');
        loading.className = 'price-loading active';
        loading.textContent = 'Fiyat Yükleniyor...';
        card.insertBefore(loading, card.querySelector('.purchase-btn'));
        
        resultsContainer.appendChild(card);

        setTimeout(() => {
          loading.classList.remove('active');
          card.querySelector('p').style.display = 'block';
          if (isMostSeller) {
            card.querySelector('.most-seller-tag').style.display = 'inline-block';
          }
        }, 1000 + (index * 200));
      });

      s(`${baseDomain} için tüm uzantılar arandı!`);
    }

    z.addEventListener('click', o);
    u.addEventListener('click', o);
    v.addEventListener('click', o);
    t.addEventListener('click', () => t.classList.add('spin'));
    dropdownToggle.addEventListener('click', toggleDropdown);
  </script>
</body>
</html>
